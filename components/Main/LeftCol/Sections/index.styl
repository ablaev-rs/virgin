// 1u is a 8px grid unit. 1u === 8px
$redText = #d3232c
.navigation
  background #eee
  padding 2u 0u
  +desktop()
    padding 2u
  +wide()
    padding 2u 3u

.menuBlock
  padding 2u 1u

.item
  text-transform uppercase
  color $redText
  font-weight 300
  font-size 1.5u
  line-height 2u
  text-decoration none
  +tablet()
    font-size 1.5u
  +desktop()
    font-size 1.6u
  +wide()
    font-size 1.8u

.faCaretUp 
  position absolute
  top 56px
  left 18px
  +desktop()
    left 27px
  +wide()
    left 35px