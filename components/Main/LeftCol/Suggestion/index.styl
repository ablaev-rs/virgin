// 1u is a 8px grid unit. 1u === 8px
$redText = #d3232c

.root
  background #f6f6f6
  padding 2u 2u 4u 2u
  +desktop()
    padding 3u
  +wide()
    padding 4u

.title
  color $redText
  font-weight 300
  text-transform uppercase
  font-size 2.5u
  letter-spacing 4px
  line-height 3u
  +desktop()
    font-size 3u
    line-height 4u

.subtitle
  color $redText
  font-weight 500
  text-transform uppercase
  font-size 1.4u
  letter-spacing 3px
  line-height 2u
  margin-top 2u
  +desktop()
    font-size 1.7u
    line-height 2u

.titleInput
  margin-top 2u
  +desktop()
    margin-top 3u

.description
  margin-top 1u
  +desktop()
    margin-top 2u

.suggContact
  justify-content space-between
  margin-top 2u
  align-items center

.email
  flex 1

.additionalText
  font-size 1.4u
  line-height 2u
  color #777777
  +desktop()
    font-size 1.5u

.mail
  color $redText
  text-transform uppercase
  font-size 1.4u
  line-height 2u
  text-decoration none
  +desktop()
    font-size 1.6u

.postBtn
  text-transform uppercase
  margin-left 1u
  +tablet()
    padding 1u 4u
