// 1u is a 8px grid unit. 1u === 8px
$redText = #d3232c

.root
  background #dddddd
  padding 2u

.header
  align-items center

.eventType
  color $redText
  font-size 2u
  text-transform uppercase

.event
  color $redText
  font-size 4u
  text-transform uppercase 
  line-height 5u

.smallSep
  width 10u
  margin-top 1u

.posts
  margin-top 3u

.post
  justify-content flex-start
  margin-top 2u

  &.first
    margin-top 0u

.dateInfo
  width 75px
  background #ffffff
  padding 1u
  align-items center

.day
  color $redText
  text-transform uppercase
  font-weight 500

.date
  color $redText
  text-transform uppercase
  font-weight 500
  font-size 3u
  line-height 4u

.postInfo
  justify-content space-between
  align-items center
  flex 1
  margin-left 2u

.eventHeader
  font-size 1.6u
  color $redText
  text-transform uppercase
  text-decoration none

.place
  font-size 1.5u
  color #333
  text-transform uppercase

.time
  font-size 1.5u
  color #333
  text-transform uppercase

.sep
  margin-top 2u

  &.last
    display none

.divider
  margin 5u 0u 0u 0u